<!-- Breadcrumb -->
<style>
    .product-images {
        display: flex;
        flex-direction: column;
        gap: 10px;
    }

    .main-image-container {
        position: relative;
        overflow: hidden;
        width: 100%;
        max-width: 500px;
        height: auto;
        cursor: crosshair;
    }

    .main-image-container img {
        width: 100%;
        height: auto;
        display: block;
    }

    .zoom-preview {
        position: absolute;
        top: -120%; /* Adjust this to control the position of the zoom preview */
        left: 50%;
        transform: translateX(-50%);
        width: 400px; /* Size of the zoomed image preview */
        height: 400px;
        border: 1px solid #ccc;
        overflow: hidden;
        background: #fff;
        display: none;
        z-index: 10;
    }

    .zoom-preview img {
        position: absolute;
        width: 200%; /* Adjust to control zoom level */
        height: auto;
    }

    .thumbnail-images img {
        width: 100%;
        height: auto;
        object-fit: cover;
        max-height: 140px;
        cursor: pointer;
    }

    .product-title {
        font-size: 24px;
        font-weight: bold;
    }

    .product-price {
        font-size: 20px;
        color: #ff0000;
    }

    .product-rating {
        color: #f8c102;
    }

    .buy-button {
        background-color: #007bff;
        border-color: #007bff;
        color: white;
    }

    .delivery-info p {
        margin-bottom: 5px;
    }

    .related-products .product-card {
        border: none;
        overflow: hidden;
    }

    .related-products .product-card img {
        width: 100%;
        object-fit: cover;
        max-height: 200px;
    }

    .related-products .card-body {
        padding: 10px;
    }

    .highlight-item {
        margin-bottom: 8px;
        font-size: 14px;
        color: #333;
        display: flex;
        align-items: center;
    }

    .highlight-item i {
        margin-right: 8px;
    }
</style>

<nav aria-label="breadcrumb" class="bg-light py-3 mt-5">
    <div class="container">
        <ol class="breadcrumb mb-0">
            <li class="breadcrumb-item"><a href="#">Home</a></li>
            <li class="breadcrumb-item"><a href="#"><%= product.category_id.category_name %></a></li>
            <li class="breadcrumb-item active" aria-current="page"><%= product.product_name %></li>
        </ol>
    </div>
</nav>

<!-- Main Product Section -->
<div class="container my-5">
    <div class="row">
        <!-- Product Images -->
        <div class="col-md-5">
            <div class="row">
                <div class="thumbnail-images col-4 d-flex flex-column">
                    <% product.images.forEach((image, index) => { %>
                        <% if(index > 0) { %> <!-- Skip the first image -->
                            <img src="/<%= image %>" class="img-thumbnail" alt="Thumbnail <%= index %>">
                        <% } %>
                    <% }); %>
                </div>
                <div class="col-8">
                    <div class="main-image-container">
                        <img src="/<%= product.images[0] %>" alt="<%= product.product_name %>">
                        <div class="zoom-preview" style="z-index: 10;">
                            <img src="/<%= product.images[0] %>" alt="Zoomed Image" style="margin-left: 100px;">
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Product Details -->
        <div class="col-md-5">
            <h1 class="product-title"><%= product.product_name %></h1>
            <p class="product-price">₹<%= product.variants[0].price %></p>
            <p class="product-rating">
                <i class="bi bi-star-fill"></i>
                <i class="bi bi-star-fill"></i>
                <i class="bi bi-star-fill"></i>
                <i class="bi bi-star-fill"></i>
                <i class="bi bi-star-half"></i> (39 reviews)
            </p>
            <p><%= product.product_description %></p>

            <!-- Buy Now -->
            <div class="mb-3 mt-5">
                <button class="btn btn-primary btn-lg buy-button">Buy Now</button>
            </div>

            <!-- Delivery Options -->
            <div class="delivery-info">
                <p><i class="bi bi-truck"></i> Free Delivery</p>
                <p><i class="bi bi-arrow-repeat"></i> Return Delivery</p>
            </div>
        </div>

        <!-- Product Highlights -->
        <div class="col-md-2">
            <h5>Highlights</h5>
            <ul class="list-unstyled">
                <% product.product_highlights.split(',').forEach(function(highlight) { %>
                    <li class="highlight-item">
                        <i class="bi bi-check-circle-fill text-success"></i>
                        <%= highlight.trim() %>
                    </li>
                <% }); %>
            </ul>
        </div>
    </div>

    <!-- Related Products Section -->
    <div class="mt-5">
        <h3>Related Products</h3>
        <div class="row">
            <% related_products.forEach(related => { %>
                <div class="col-md-3 col-sm-6 mb-3">
                    <div class="card product-card">
                        <img src="/<%= related.images[0] %>" class="card-img-top" alt="<%= related.product_name %>">
                        <div class="card-body text-center">
                            <h4 class="card-title" style="font-size: 15px;"><%= related.product_name %></h4>
                            <p class="product-price">₹<%= related.variants[0].price %></p>
                            <a href="/product/<%= related._id %>" class="btn btn-primary btn-sm">View Product</a>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
    const mainImageContainer = document.querySelector('.main-image-container');
    const mainImage = mainImageContainer.querySelector('img');
    const zoomPreview = mainImageContainer.querySelector('.zoom-preview');
    const zoomPreviewImage = zoomPreview.querySelector('img');

    mainImageContainer.addEventListener('mousemove', function(e) {
        const containerRect = mainImageContainer.getBoundingClientRect();
        const xPercent = (e.clientX - containerRect.left) / containerRect.width;
        const yPercent = (e.clientY - containerRect.top) / containerRect.height;

        // Position the zoomed image inside the preview
        zoomPreviewImage.style.transform = `translate(-${xPercent * 100}%, -${yPercent * 100}%)`;

        // Show the zoom preview
        zoomPreview.style.display = 'block';
    });

    mainImageContainer.addEventListener('mouseleave', function() {
        // Hide the zoom preview
        zoomPreview.style.display = 'none';
    });
});

</script>