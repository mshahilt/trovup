<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Listing</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .product-card {
            border: none;
            transition: transform 0.3s ease;
        }
        .product-card:hover {
            transform: translateY(-10px);
        }
        .product-img {
            height: 200px;
            object-fit: contain;
            cursor: pointer;
        }
        .product-price {
            font-weight: bold;
        }
        .old-price {
            text-decoration: line-through;
            color: grey;
        }
        .discount-badge {
            position: absolute;
            top: 10px;
            left: 10px;
            background-color: #ff5050;
            color: white;
            padding: 5px;
            font-size: 14px;
            border-radius: 3px;
        }
        .product-actions {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
    </style>
</head>
<body>

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Products</h2>
        <form class="d-flex" method="GET" id="filterForm" action="/products">
            <input class="form-control me-2" type="search" name="search" placeholder="Search products" value="<%= search || '' %>">
            <button class="btn btn-outline-dark" type="submit">Search</button>
            <!-- Hidden field to handle sort -->
            <input type="hidden" id="sortField" name="sort" value="<%= sort || '' %>">
        </form>
        
    </div>

    <div class="row mb-4">
        <div class="col-md-3">
            <h5>Filter by</h5>
            
<!-- Filters Sidebar -->
<form id="filterForm" method="GET" action="/products">
    <input type="hidden" name="search" value="<%= search || '' %>"> <!-- Retain search term -->
    <input type="hidden" name="sort" value="<%= sort || '' %>"> <!-- Retain sort order -->

    <div class="mb-3">
        <label for="colorFilter" class="form-label">Color</label>
        <select id="colorFilter" class="form-select" name="color">
            <option value="">All</option>
            <% colors.forEach(color => { %>
                <option value="<%= color %>" <%= color === selectedColor ? 'selected' : '' %>><%= color %></option>
            <% }) %>
        </select>
    </div>

    <div class="mb-3">
        <label for="brandFilter" class="form-label">Brand</label>
        <select id="brandFilter" class="form-select" name="brand">
            <option value="">All</option>
            <% brands.forEach(brand => { %>
                <option value="<%= brand %>" <%= brand === selectedBrand ? 'selected' : '' %>><%= brand %></option>
            <% }) %>
        </select>
    </div>

    <div class="mb-3">
        <label for="categoryFilter" class="form-label">Category</label>
        <select id="categoryFilter" class="form-select" name="category">
            <option value="">All</option>
            <% categories.forEach(category => { %>
                <option value="<%= category %>" <%= category === selectedCategory ? 'selected' : '' %>><%= category %></option>
            <% }) %>
        </select>
    </div>

    <div class="mb-3">
        <label for="priceFilter" class="form-label">Price Range</label>
        <input type="number" class="form-control" id="minPrice" name="minPrice" placeholder="Min Price" value="<%= minPrice || '' %>">
        <input type="number" class="form-control mt-2" id="maxPrice" name="maxPrice" placeholder="Max Price" value="<%= maxPrice || '' %>">
    </div>

    <button type="submit" class="btn btn-dark">Apply Filters</button>
</form>
        </div>

        <div class="col-md-9">
            
<!-- Sort Dropdown -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <div class="form-group">
        <label for="sortProducts" class="form-label">Sort by:</label>
        <select id="sortProducts" class="form-select" onchange="sortProducts()">
            <option value="">Default</option>
            <option value="priceLowHigh" <%= sort === 'priceLowHigh' ? 'selected' : '' %>>Price: Low to High</option>
            <option value="priceHighLow" <%= sort === 'priceHighLow' ? 'selected' : '' %>>Price: High to Low</option>
            <option value="nameAZ" <%= sort === 'nameAZ' ? 'selected' : '' %>>Name: A to Z</option>
            <option value="nameZA" <%= sort === 'nameZA' ? 'selected' : '' %>>Name: Z to A</option>
        </select>
    </div>
</div>

            <div class="row">
                <% if (products.length > 0) { %>
                    <% products.forEach(product => { %>
                        <div class="col-md-4 mb-4">
                            <div class="card product-card">
                                <div class="position-relative">
                                    <% if (product.discount) { %>
                                        <span class="discount-badge">-<%= product.discount %>%</span>
                                    <% } %>
                                    <% if (product.variants && product.variants.length > 0 && product.variants[0].images && product.variants[0].images.length > 0) { %>
                                        <img src="<%= product.variants[0].images[0] %>" class="card-img-top product-img" alt="<%= product.product_name %>" onclick="viewProduct('<%= product._id %>')">
                                    <% } else { %>
                                        <img src="default-image.jpg" class="card-img-top product-img" alt="Default Image" onclick="viewProduct('<%= product._id %>')">
                                    <% } %>
                                </div>
                                <div class="card-body">
                                    <h6 class="card-title"><%= product.product_name %></h6>
                                    <div class="product-price">
                                        <span>₹<%= product.variants[0].price %></span>
                                        <% if (product.old_price) { %>
                                            <span class="old-price">₹<%= product.old_price %></span>
                                        <% } %>
                                    </div>
                                    <div class="mt-3 product-actions">
                                        <button class="btn btn-dark btn-block" onclick="viewProduct('<%= product._id %>')">View Product</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                <% } else { %>
                    <div class="col-12">
                        <p>No products found</p>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</div>

<script>
     function sortProducts() {
        const sortOption = document.getElementById('sortProducts').value;
        document.getElementById('sortField').value = sortOption; // Update hidden sort field
        document.getElementById('filterForm').submit(); // Submit the form with the updated sort value
    }

    function viewProduct(productId) {
        window.location.href = `/product/${productId}`;
    }
</script>

</body>
</html>
