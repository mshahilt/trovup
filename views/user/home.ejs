<!-- Brand Names -->
<div class="container-fluid p-0">
  <img src="/public/user/img/brand_names.jpg" class="img-fluid p-5" alt="Brand Names">
</div>
    
<!-- Cards -->
<div class="container">
  <div class="col-lg-12">
    <div class="row">
      <% products.forEach(product => { %>
        <div class="col-lg-3 col-sm-6 mb-3 col-md-4">
          <div class="card product-card mx-3 mt-5">
            <div class="card-img-container position-relative">
              <!-- Link wrapping the image to pass the product ID as a parameter -->
              <a href="/product/<%= product._id %>">
                <img src="/<%= product.images[0] %>" class="card-img-top img-fluid" alt="<%= product.product_name %>">
              </a>
              <span class="discount-badge position-absolute top-0 start-0">-35%</span>
              <a href="/product/<%= product._id %>" class="view-icon position-absolute top-0 end-0"><i class="far fa-eye"></i></a>
            </div>
            <div class="card-body text-center">
              <h3 class="card-title" style="font-size: 15px;"><%= product.product_name %></h3>
              <h3 class="price py-2">₹ <%= product.variants[0].price %> <span class="old-price"><strike>₹ 25,000</strike></span></h3>
              <div class="star-rating">
                <i class="fas fa-star"></i>
                <i class="fas fa-star"></i>
                <i class="fas fa-star"></i>
                <i class="fas fa-star"></i>
                <i class="far fa-star"></i>
              </div>
              <a href="/cart/add/<%= product._id %>" class="btn btn-primary px-4 mt-3" style="font-size: 14px;">Add to Cart</a>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
  </div>
</div>

