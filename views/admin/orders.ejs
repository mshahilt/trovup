<div class="grid-margin stretch-card">
  <div class="card">
    <div class="card-body">
      <h4 class="card-title">Hoverable Table</h4>
      <p class="card-description"> Add class <code>.table-hover</code>
      </p>
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Order Id</th>
              <th>User Id</th>
              <th>Items</th>
              <th>Payment Type</th>
              <th>Status</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% order_history.forEach(order => { %>
              <tr>
                <td><%= order._id %></td>
                <td><%= order.user %></td>
                <td>
                  <% order.items.forEach(item => { %>
                    <div>
                      <img src="/<%= item.product.variants.find(v => v._id.toString() === item.variantId.toString()).images[0] %>" alt="Product Image" width="50px">
                      <p><%= item.product.product_name %></p>
                      <p>Color: <%= item.product.variants.find(v => v._id.toString() === item.variantId.toString()).color %></p>
                      <p>Storage: <%= item.product.variants.find(v => v._id.toString() === item.variantId.toString()).storage_size %></p>
                    </div>
                  <% }) %>
                </td>
                <td><%= order.paymentMethod %></td>
                <td><label class="badge badge-warning"><%= order.orderStatus %></label></td>
                <td>
                  <button class="btn btn-danger cancel-order-btn" data-order-id="<%= order._id %>">Cancel</button>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
  $(document).ready(function() {
    $('.cancel-order-btn').on('click', function() {
      const orderId = $(this).data('order-id');

      // Confirm before canceling
      Swal.fire({
        title: 'Are you sure?',
        text: "You won't be able to revert this!",
        icon: 'warning',
        showCancelButton: true,
        confirmButtonColor: '#3085d6',
        cancelButtonColor: '#d33',
        confirmButtonText: 'Yes, cancel it!'
      }).then((result) => {
        if (result.isConfirmed) {
          $.ajax({
            url: '/admin/cancel-order', 
            method: 'POST',
            data: { orderId: orderId },
            success: function(response) {
              Swal.fire(
                'Canceled!',
                'Your order has been canceled successfully.',
                'success'
              ).then(() => {
                // Reload the page to reflect the changes
                location.reload();
              });
            },
            error: function(err) {
              Swal.fire(
                'Failed!',
                'There was an issue canceling your order. Please try again.',
                'error'
              );
            }
          });
        }
      });
    });
  });
</script>
