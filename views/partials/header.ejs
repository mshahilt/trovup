<!-- Styles for Search Results -->
<style>
  /* Remove default link styles and make result bold */
.search-result-link {
  display: flex;
  text-decoration: none; /* Remove underline */
  color: black; /* Change the text color */
  width: 100%;
}

.search-result-name {
  font-weight: bold; /* Make the product name bold */
  font-size: 16px;
  color: black; /* Ensure text remains black */
}

.search-result-category {
  font-size: 12px;
  color: #777;
}

.search-result-item {
  display: flex;
  align-items: center;
  padding: 10px;
  border-bottom: 1px solid #f0f0f0;
  transition: background-color 0.2s ease;
}

.search-result-item:hover {
  background-color: #f9f9f9;
}

.search-result-image {
  width: 50px;
  height: 50px;
  object-fit: cover;
  border-radius: 5px;
  margin-right: 15px;
}

.search-result-info {
  display: flex;
  flex-direction: column;
}

  #search-results {
    background-color: white;
    border: 1px solid #ccc;
    position: absolute;
    width: 100%;
    z-index: 1000;
    max-height: 300px;
    overflow-y: auto;
    display: none;
  }

  #search-results div {
    padding: 10px;
    cursor: pointer;
  }

  #search-results div:hover {
    background-color: #f0f0f0;
  }

  #loading-spinner {
    display: none;
    color: gray;
  }
</style>

