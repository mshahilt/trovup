<!-- Top Notification Banner -->
<div class="bg-dark text-white text-center py-2">
  <div class="container">
    <p class="mb-0" style="font-size: 12px;">
      Summer Sale For All Swim Suits And Free Express Delivery - OFF 50%!  
      <a href="#" class="btn btn-primary text-light" style="transition: all 0.3s ease;">SHOP NOW</a>
    </p>
  </div>
</div>

<!-- Navbar -->
<nav class="navbar navbar-expand-lg" style="background-color: white; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);">
  <div class="container">
    <a class="navbar-brand" href="/" style="color: black; font-weight: bold; font-size: 24px; transition: color 0.3s ease;">Trovup</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse justify-content-between" id="navbarNav">
      <!-- Navbar Links -->
      <ul class="navbar-nav mx-auto mb-2 mb-lg-0 text-center">
        <li class="nav-item">
          <a class="nav-link" href="/" style="color: black; padding: 10px 20px; transition: color 0.3s ease;">Home</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/products" style="color: black; padding: 10px 20px; transition: color 0.3s ease;">Shop</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#" style="color: black; padding: 10px 20px; transition: color 0.3s ease;">Contact</a>
        </li>
      </ul>

      <!-- Navbar Icons (Wishlist, Cart, Profile) -->
      <div class="navbar-icons d-flex align-items-center">
        <a href="/wishlist" class="position-relative me-4" style="transition: all 0.3s ease;">
          <i class="far fa-heart" style="font-size: 20px; color: black;"></i>
          <% if (wishlistCount > 0) { %>
            <span class="badge position-absolute top-0 start-100 translate-middle badge rounded-circle bg-danger" style="font-size: 12px;"><%= wishlistCount %></span>
          <% } %>
        </a>
        <a href="/cart" class="position-relative me-4" style="transition: all 0.3s ease;">
          <i class="fas fa-shopping-cart" style="font-size: 25px; color: black;"></i>
          <% if (cartCount > 0) { %>
            <span class="badge position-absolute top-0 start-100 translate-middle badge rounded-circle bg-danger" style="font-size: 12px;"><%= cartCount %></span>
          <% } %>
        </a>
        <a href="/profile" class="me-3" style="transition: all 0.3s ease;">
          <i class="far fa-user" style="font-size: 22px; color: black;"></i>
        </a>
      </div>

      <!-- Signup/Login Button -->
      <div class="d-flex align-items-center">
        <% if (isUserLoggedIn) { %>
          <form action="/logout" method="post">
            <button class="btn btn-outline-dark ms-3" style="font-size: 14px; color: black; transition: background-color 0.3s ease, color 0.3s ease;">Logout</button>
          </form>
        <% } else { %>
          <a href="/login" class="btn btn-outline-dark ms-3" style="font-size: 14px; color: black; transition: background-color 0.3s ease, color 0.3s ease;">Sign Up</a>
        <% } %>
      </div>
    </div>
  </div>
</nav>

<!-- Updated Styles -->
<style>
  .navbar-nav .nav-link:hover {
    color: #007bff;
  }

  .navbar-icons a:hover i {
    color: #007bff;
  }

  .navbar-toggler {
    border: none;
    transition: transform 0.3s ease;
  }

  .navbar-toggler:focus {
    outline: none;
  }

  .navbar-icons .badge {
    padding: 3px 6px;
    font-size: 12px;
  }

  .navbar-toggler-icon {
    background-color: black;
    border-radius: 2px;
    width: 30px;
    height: 3px;
    display: block;
    position: relative;
    transition: all 0.3s ease;
  }

  .navbar-toggler-icon::before,
  .navbar-toggler-icon::after {
    content: '';
    background-color: black;
    border-radius: 2px;
    width: 30px;
    height: 3px;
    position: absolute;
    transition: all 0.3s ease;
  }

  .navbar-toggler-icon::before {
    top: -8px;
  }

  .navbar-toggler-icon::after {
    top: 8px;
  }

  .navbar-toggler.collapsed .navbar-toggler-icon {
    background-color: transparent;
  }

  .navbar-toggler.collapsed .navbar-toggler-icon::before {
    transform: rotate(45deg) translate(5px, 5px);
  }

  .navbar-toggler.collapsed .navbar-toggler-icon::after {
    transform: rotate(-45deg) translate(5px, -5px);
  }

  @media (max-width: 991px) {
    .navbar-nav {
      text-align: center;
      flex-direction: column;
    }

    .navbar-brand {
      margin-left: 0;
    }

    .navbar-icons {
      justify-content: center;
    }
  }
</style>
