  <style>
    /* Ensure the container-scroller uses flexbox */
    .container-scroller {
      display: flex;
      min-height: 100vh; /* Allow content to extend beyond viewport height */
      flex-direction: column;
    }

    /* Sidebar should be fixed width and stay above the background */
    .sidebar {
      width: 240px;
      flex-shrink: 0;
      position: relative; /* Ensure positioning context for z-index */
      z-index: 999; /* Higher z-index to stay on top */
    }

    /* Content wrapper takes the remaining space */
    .content-wrapper {
      flex-grow: 1;
      padding: 20px; /* Adjust padding as needed */
      overflow-y: auto; /* Ensures scrolling if content is long */
    }

    /* Header styling */
    .header {
      position: sticky;
      top: 0;
      z-index: 1000;
      background-color: #fff; /* Or match your theme */
      padding: 10px;
    }

    /* Define grid layout */
    .grid-container {
      display: flex; /* Use flexbox for layout */
      min-height: 100%; /* Let the grid container grow with the content */
    }

    /* Sidebar styling */
    .sidebar {
      height: 100%; /* Sidebar takes full height */
      flex-shrink: 0;
    }

    /* Content styling */
    .content-wrapper {
      flex-grow: 1;
      padding: 20px;
      overflow-y: auto;
    }
  </style>
</head>
